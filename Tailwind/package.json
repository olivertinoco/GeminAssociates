{
  "name": "tailwind",
  "type": "module",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "tailwindcss": "3.4.1",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ../wwwroot/css/site.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ../wwwroot/css/site.css --minify",
    "build:js": "bun run build.js",
    "build": "bun run build:css && bun run build:js"
  }
}
